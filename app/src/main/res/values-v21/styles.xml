<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="button_numeric" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/button_numeric_selector</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="button_operand" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/button_operand_selector</item>
        <item name="android:textColor">#198CAB</item>
    </style>
</resources>
